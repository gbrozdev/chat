

<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="col-md-6">
                <div class="card card-bordered">
                    <div class="card-header">
                        <h4 class="card-title"><strong>Chat with {{chater}}</strong></h4>
                    </div>

                    <div class="ps-container ps-theme-default ps-active-y" id="chat-content"
                        style="overflow-y: scroll !important; height:350px !important; ">
                    {{#each chats}}
                        
                        <div class="media media-chat {{this.style}}">
                             <img class="avatar"
                                src="https://img.icons8.com/color/36/000000/administrator-male.png" alt="...">
                            <div class="media-body">

                                <p>{{this.msg}}</p>
                                <p class="timestamp meta "><time datetime="2018">{{this.time}}</time></p>
                        <small>{{this.user}} {{this.you}} </small>
                            </div>
                        </div>

                        <div class="ps-scrollbar-x-rail" style="left: 0px; bottom: 0px;">
                            <div class="ps-scrollbar-x" tabindex="0" style="left: 0px; width: 0px;"></div>
                        </div>
                        <div class="ps-scrollbar-y-rail" style="top: 0px; height: 0px; right: 2px;">
                            <div class="ps-scrollbar-y" tabindex="0" style="top: 0px; height: 2px;"></div>
                        </div>
                    {{/each}}
                    </div>
                    <div class="media media-meta-day">Today</div>
                    {{!-- <div class="publisher bt-1 border-light"> <img class="avatar avatar-xs"
                            src="https://img.icons8.com/color/36/000000/administrator-male.png" alt="..."> <input
                            class="publisher-input" type="text" placeholder="Write something" name="msg"> <span
                            class="publisher-btn file-group"> <i class="fa fa-paperclip file-browser"></i> <input
                                type="file"> </span> <a class="publisher-btn" href="#" data-abc="true"><i
                                class="fa fa-smile"></i></a> <a class="publisher-btn text-info" href="#"
                            data-abc="true"><i class="fa fa-paper-plane"></i></a> </div> --}}
                    <div class="publisher bt-1 border-light">
                        <img class="avatar avatar-xs"
                            src="https://img.icons8.com/color/36/000000/administrator-male.png" alt="...">
                        <form action="/chat/single" method="post">
                            <input class="publisher-input" type="text" placeholder="Write something" autofocus name="msg">
                            <input type="text" name="chater" hidden value="{{chater}}">
                            <button class="send-btn publisher-btn text-info" data-abc="true" type="submit">
                                <i class="fa fa-paper-plane"></i></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    function myfunc (){
        var element = document.getElementById("chat-content");
element.scrollTop = element.scrollHeight;
    }
    window.onload = myfunc;


    
</script>